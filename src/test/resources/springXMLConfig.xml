<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"       
       xmlns:context="http://www.springframework.org/schema/context"       
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">
    
    <context:annotation-config/>
    
    <!-- Property placeholder-->
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:resources/spectrawl.properties
                </value>
            </list>
        </property>
        <property name="ignoreUnresolvablePlaceholders">
            <value>true</value>
        </property>       
    </bean> 
    
    <!-- transaction beans -->
    <bean id="msLimsDataSource" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${db.driver}"/>
        <property name="url" value="${db.url}"/>
        <property name="username" value="${db.username}"/>
        <property name="password" value="${db.password}"/>
        <property name="initialSize" value="${db.initial_pool_size}"/>
        <property name="maxActive" value="${db.max_pool_size}"/>
    </bean>
    
    <!-- repository beans -->
    <context:component-scan base-package="com.compomics.spectrawl.data">
        <context:include-filter type="annotation"
                                expression="org.springframework.stereotype.Repository"/>
    </context:component-scan> 
    
    <!-- component beans -->
    <context:component-scan base-package="com.compomics.spectrawl">
        <context:include-filter type="annotation"
                                expression="org.springframework.stereotype.Component"/>
    </context:component-scan>             
                        
    <bean id="taskExecutor" class="java.util.concurrent.Executors" 
          factory-method="newFixedThreadPool"
          destroy-method="shutdown">
        <constructor-arg type="int" value="${size}"/>
    </bean>
                                                           
    <!-- guava event bus bean -->
    <bean id="eventBus" class="com.google.common.eventbus.EventBus"/>                     
                           
</beans>
